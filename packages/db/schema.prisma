generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AppUser {
  id          String    @id @default(uuid())
  username    String    @unique
  password    String
  email       String?   @unique
  timezone    String    @default("Asia/Shanghai")
  createdAt   DateTime  @default(now())
  isActive    Boolean   @default(true)
  note        String?

  accounts              PlatformAccount[]
  snapshots             DailySnapshot[]
  memberships           GroupMember[]
  notifications         UserNotification[]
  portfolioShareConfig  PortfolioShareConfig?
  assetCategories       AssetCategory[]
  allocationConfigs     AllocationConfig[]
  categoryDefinitions   CategoryDefinition[]
  createdGroups         FamilyGroup[]      @relation("FamilyGroupCreator")
}

model PlatformAccount {
  id          String        @id @default(uuid())
  userId      String
  platform    PlatformType
  name        String
  credentials String?
  status      AccountStatus @default(Connected)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  user    AppUser        @relation(fields: [userId], references: [id])
  assets  AssetPosition[]

  @@index([userId])
}

enum AccountStatus {
  Connected
  Error
  NeedVerify
  Unauthorized
}

enum PlatformType {
  EASTMONEY
  TIANTIAN
  XUEQIU
  IBKR
  SCHWAB
  MOCK
  OTHER
}

model FamilyGroup {
  id        String   @id @default(uuid())
  name      String
  creatorId String
  createdAt DateTime @default(now())

  members GroupMember[]
  creator AppUser     @relation("FamilyGroupCreator", fields: [creatorId], references: [id])

  @@index([creatorId])
}

model PortfolioShareConfig {
  id         String   @id @default(uuid())
  userId     String   @unique
  isEnabled  Boolean  @default(false)
  shareToken String   @unique @default(uuid())
  showHoldings Boolean @default(true)
  updatedAt  DateTime @updatedAt

  user AppUser @relation(fields: [userId], references: [id])
}

model GroupMember {
  id       String    @id @default(uuid())
  groupId  String
  userId   String
  role     GroupRole @default(MEMBER)
  joinedAt DateTime  @default(now())

  group FamilyGroup @relation(fields: [groupId], references: [id])
  user  AppUser     @relation(fields: [userId], references: [id])

  @@unique([groupId, userId])
}

enum GroupRole {
  OWNER
  MEMBER
}

model UserNotification {
  id        String      @id @default(uuid())
  userId    String
  type      NotifyType
  title     String
  content   String
  payload   Json?
  isRead    Boolean     @default(false)
  createdAt DateTime    @default(now())

  user AppUser @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum NotifyType {
  INVITATION
  SYSTEM
  ALERT
}

model DailySnapshot {
  id           String          @id @default(uuid())
  userId       String
  date         DateTime        @db.Date
  timestamp    DateTime        @default(now())
  totalValue   Decimal         @db.Decimal(20, 2)
  dayProfit    Decimal         @db.Decimal(20, 2)
  totalProfit  Decimal         @db.Decimal(20, 2)
  status       SnapshotStatus  @default(OK)
  baseCurrency String          @default("CNY")

  holdings AssetPosition[]
  user     AppUser        @relation(fields: [userId], references: [id])

  @@unique([userId, date])
  @@index([date])
  @@index([userId])
}

model AssetPosition {
  id          String   @id @default(uuid())
  snapshotId  String
  accountId   String
  symbol      String
  name        String?
  quantity    Decimal  @db.Decimal(20, 4)
  price       Decimal  @db.Decimal(20, 4)
  costPrice   Decimal  @db.Decimal(20, 4)
  marketValue Decimal  @db.Decimal(20, 2)
  dayProfit   Decimal  @db.Decimal(20, 2)
  currency    String   @default("CNY")

  snapshot DailySnapshot  @relation(fields: [snapshotId], references: [id], onDelete: Cascade)
  account  PlatformAccount @relation(fields: [accountId], references: [id])

  @@index([snapshotId])
  @@index([accountId])
}

enum SnapshotStatus {
  OK
}

model CurrencyRate {
  id           String   @id @default(uuid())
  fromCurrency String
  toCurrency   String
  rate         Decimal  @db.Decimal(20, 8)
  updatedAt    DateTime @updatedAt

  @@unique([fromCurrency, toCurrency])
}

model AssetCategory {
  id       String   @id @default(uuid())
  userId   String
  symbol   String
  category String

  user AppUser @relation(fields: [userId], references: [id])

  @@unique([userId, symbol])
  @@index([userId, category])
}

model AllocationConfig {
  id         String   @id @default(uuid())
  userId     String
  category   String
  percentage Decimal  @db.Decimal(5, 2)

  user AppUser @relation(fields: [userId], references: [id])

  @@unique([userId, category])
  @@index([userId])
}

model CategoryDefinition {
  id        String   @id @default(uuid())
  userId    String
  name      String
  createdAt DateTime @default(now())

  user AppUser @relation(fields: [userId], references: [id])

  @@unique([userId, name])
}
